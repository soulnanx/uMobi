<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="26dp"
    tools:context="br.com.umobi.ui.fragment.NewPlaceFinishFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="O que voce acha de adicionar uma foto desse local?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_new_place_add_image_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:src="@drawable/ic_camera_alt"
        android:layout_centerInParent="true"
        android:transitionName="avatar"
        app:border_color="@color/colorPrimary"
        app:border_width="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_new_place_add_image_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:src="@drawable/ic_camera_alt"
        android:layout_centerInParent="true"
        android:transitionName="avatar"
        app:border_color="@color/colorPrimary"
        android:visibility="gone"
        app:border_width="2dp" />

    <Button
        android:id="@+id/fragment_new_place_add_image_next"
        style="@style/BasicButton"
        android:text="AvanÃ§ar!"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>