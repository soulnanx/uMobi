<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:contentPadding="8dp"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/item_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/strong_gray"
            android:textSize="22sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton android:id="@+id/item_answer_radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_yes"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="32dp"/>

            <RadioButton android:id="@+id/item_answer_radio_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_no"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="32dp"/>

            <RadioButton android:id="@+id/item_answer_radio_i_do_not_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_radio_i_do_not_know"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="32dp"/>

        </RadioGroup>

</LinearLayout>